<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WeekViewDayTitleTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WeekViewTimeTextView">
        <item name="android:layout_width">@dimen/week_view_time_width</item>
        <item name="android:layout_height">@dimen/week_view_time_height</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WeekViewSubjectTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/week_view_subject_text_view_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/week_view_subject_text_view_border</item>
        <item name="android:background">@drawable/week_view_subject_border</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SearchViewTitleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/search_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EditViewEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="NewsViewErrorTextView" parent="SearchViewTitleTextView" />

</resources>
