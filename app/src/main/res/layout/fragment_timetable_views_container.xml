<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/timetable_view_container_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/week_view_tab_layout_height"
            android:background="@color/colorPrimary"
            android:paddingBottom="5dp"
            android:visibility="gone"
            app:tabIndicator="@drawable/tab_indicator"
            app:tabIndicatorColor="@android:color/white"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorHeight="5dp"
            app:tabSelectedTextColor="@android:color/white"
            app:tabTextColor="#99FFFFFF" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/timetable_view_view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone" />

        <TextView
            android:id="@+id/timetable_view_container_text_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/no_group_selected"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

</layout>