<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/news_card_view_outer_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/news_card_view_inner_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/news_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/news_title_text_size"
            android:textStyle="bold"
            tools:text="Example news title" />

        <TextView
            android:id="@+id/news_content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Example news content" />

    </LinearLayout>

</android.support.v7.widget.CardView>